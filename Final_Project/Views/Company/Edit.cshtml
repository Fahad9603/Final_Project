﻿@model Final_Project.Models.Company
@{
    ViewBag.Title = "Update Company";

}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<form class="row g-3">
    <div class="col-12">
        <button class="btn btn-outline-dark" type="submit">Update</button>
        <a class="btn btn-outline-dark" @Html.ActionLink("Return", "SETUP_COMPANY")
    </div>
    <br />
    <div class="col-md-5">
        <label for="floatingInput" class="form-label">Company Code</label>
        @*<input type="text" class="form-control" id="floatingInput" required>*@
        @Html.EditorFor(model => model.Company_Code, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Company Code" } })
        @*@Html.TextBox("Company_Code", "", new { @class = "form-control", placeholder = "Enter Company Code" })*@
    </div>
    <div class="col-md-5">
        <label for="floatingInput" class="form-label">Company Name</label>
        @*<input type="text" class="form-control" id="floatingInput" required>*@
        @Html.EditorFor(model => model.Company_Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Company Name" } })
        @*@Html.TextBox("Company_Code", "", new { @class = "form-control", placeholder = "Enter Company Name" })*@
    </div>

    <div class="col-md-5">
        <label for="floatingInput" class="form-label">Contact Number</label>
        @*<input type="text" class="form-control" id="floatingInput">*@
        @Html.EditorFor(model => model.Company_Contact, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Contact Number" } })
        @*@Html.TextBox("Company_Code", "", new { @class = "form-control", placeholder = "Enter Contact Number" })*@
    </div>
    <div class="col-md-5">
        <label for="floatingInput" class="form-label">Company Address</label>
        @*<input type="text" class="form-control" id="floatingInput">*@
        @Html.EditorFor(model => model.Company_Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Company Address" } })
        @*@Html.TextBox("Company_Code", "", new { @class = "form-control", placeholder = "Enter Company Address" })*@
    </div>

    <br />

</form>
}

